{
  "name": "@exah/webpack-universal-hot-middleware",
  "version": "1.0.0",
  "description": "Simple universal hot webpack middleware",
  "author": "John Grishin <hi@johngrish.in>",
  "license": "MIT",
  "repository": "exah/webpack-universal-hot-middleware",
  "main": "lib/index.js",
  "files": [
    "./lib"
  ],
  "tags": [
    "webpack",
    "hot"
  ],
  "scripts": {
    "deploy": "np --no-cleanup",
    "version": "auto-changelog -p && git add CHANGELOG.md",
    "precommit": "lint-staged",
    "prepush": "npm test"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "./src/**/*.js": "eslint",
    "./test/**/*.js": "eslint"
  },
  "eslintConfig": {
    "extends": "standard",
    "rules": {
      "no-shadow": 2
    }
  },
  "auto-changelog": {
    "commitLimit": 10,
    "template": ".changelog.hbs"
  },
  "devDependencies": {
    "auto-changelog": "^1.7.1",
    "cross-env": "5.1.6",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "flow-bin": "^0.75.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.1.3",
    "np": "3.0.4"
  },
  "dependencies": {
    "create-react-context": "^0.2.2",
    "express": "^4.16.3",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "react-tree-walker": "^4.1.0",
    "recompose": "^0.27.1",
    "require-from-string": "^2.0.2",
    "source-map-support": "^0.5.9",
    "webpack": "^4.17.1",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-hot-middleware": "^2.22.3",
    "webpack-hot-server-middleware": "^0.5.0"
  }
}
