{
  "name": "@exah/webpack-universal-hot-middleware",
  "version": "1.1.1",
  "description": "Simple universal hot webpack middleware",
  "author": "John Grishin <hi@johngrish.in>",
  "license": "MIT",
  "repository": "exah/webpack-universal-hot-middleware",
  "main": "lib/index.js",
  "files": [
    "./lib"
  ],
  "tags": [
    "webpack",
    "hot"
  ],
  "scripts": {
    "deploy": "np --no-cleanup",
    "test": "eslint lib",
    "version": "auto-changelog -p && git add CHANGELOG.md",
    "precommit": "lint-staged",
    "prepush": "npm test"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "./src/**/*.js": "eslint",
    "./test/**/*.js": "eslint"
  },
  "eslintConfig": {
    "extends": "standard",
    "rules": {
      "no-shadow": 2
    }
  },
  "auto-changelog": {
    "commitLimit": 10,
    "template": ".changelog.hbs"
  },
  "devDependencies": {
    "auto-changelog": "^1.8.0",
    "eslint": "^5.5.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.0",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "np": "3.0.4",
    "webpack": "^4.17.1"
  },
  "peerDependencies": {
    "webpack": "^4.0.0"
  },
  "dependencies": {
    "express": "^4.16.3",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "require-from-string": "^2.0.2",
    "source-map-support": "^0.5.9",
    "webpack-dev-middleware": "^3.2.0",
    "webpack-hot-middleware": "^2.23.0"
  }
}
